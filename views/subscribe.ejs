<!-- This is what we want to render for the register ('subscribe') page -->
<!-- From Brad Traversy https://github.com/bradtraversy/node_passport_login/blob/master/views/register.ejs  -->

<!-- Bootstrap markup -->

<div class="row mt-5">
    <div class="col-md-5 m-auto">
      <div class="card card-body">
        <!-- h1 with an icon register -->
        <h1 class="text-center mb-3">
          <i class="fas fa-hand-spock"></i> Register
        </h1>
        <p class="lead text-white">Create an account to subscribe to our newsletters!</p>
        <!-- including messages partial in views folder to display error and success messages  -->
        <% include ./partials/messages %>
        <!-- form with action going to /users/subscribe with a POST request -->
        <form action="/users/subscribe" method="POST">
          <fieldset>
              <div class="form-group">
                <label for="name">Name*</label>
                <!-- sending name, type, id, class, placeholder and value(ejs:if there is a name and validation doesnt pass, we dont want to completely clear the form. We want to keep whatevers in there. So if typeof name != 'undefined' then we want to display whatever that name variable is and pass it into the view, else its going to be blank) -->
                <input
                  type="name"
                  id="name"
                  name="name"
                  class="form-control"
                  placeholder="Enter Name"
                  value="<%= typeof name != 'undefined' ? name : '' %>"
                />
              </div>
              <div class="form-group">
                <label for="email">Email*</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="Enter Email"
                  value="<%= typeof email != 'undefined' ? email : '' %>"
                />
              </div>
              <div class="form-group">
                <label for="password">Password*</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Create Password"
                  value="<%= typeof password != 'undefined' ? password : '' %>"
                />
              </div>
              <div class="form-group">
                <label for="password2">Confirm Password*</label>
                <input
                  type="password"
                  id="password2"
                  name="password2"
                  class="form-control"
                  placeholder="Confirm Password"
                  value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />
              </div>
              <div class="form-group">
              <input
                  type="checkbox"
                  id="checkbox"
                  name="adult"
                  class="form-control"
                  value="adult"
                /> I am over 18 
              </div>
              <button type="submit" class="btn btn-warning btn-block">
                Register
              </button>
          </fieldset>
        </form>
        <!-- link to login if you have an account -->
        <p class="lead mt-4">Have An Account? <a class="text-warning" href="/users/login">Login</a></p>
      </div>
      <div id="copy">&copy; by Mallory</div>
    </div>
  </div>